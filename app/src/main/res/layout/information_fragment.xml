<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sand"
    tools:ignore="ExtraText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choose_first_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/choose_first_question_title"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_day"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentDay"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_dayET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_month"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentMonth"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_monthET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentDate"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_dateET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_year"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentYear"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_yearET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_season"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentSeason"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_seasonET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_country"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentCountry"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_countryET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_city"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentCity"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_cityET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_street"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentStreet"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_streetET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_floor"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentFloor"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_floorET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/information_area"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enter_currentArea"
                    android:textSize="20sp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_mic_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_areaET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="21"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingStart="100dp"
                android:paddingEnd="100dp">

                <Button
                    android:id="@+id/next_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_border"
                    android:gravity="center"
                    android:hint="@string/button_next"
                    android:padding="10dp"
                    android:textColorHint="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/midnighit_blue" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>